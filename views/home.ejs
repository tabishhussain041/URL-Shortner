<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <!-- Since we have already given till asset structure -->

    <title>URL Shortener</title>
</head>

<body>
    <!--  The post request for our form will be /shortUrls -->
    <form action="/shortUrls" method="POST">
        <div class="container">
            <div class="w-full   bg-gray-500  bg-no-repeat" style="
                    background-blend-mode: multiply;
                    background-position: center center;
                    background-image: url('C:\Users\tabis\Downloads\Smart-URL-Shortener-main\Smart-URL-Shortener-main\download.jpeg');
                    ">
                <div class=" p-10  py-20  flex  flex-col  flex-wrap  justify-center  content-center">
                    <div class=" m-0  p-0  text-3xl  text-white  antialiased  text-center">URL Shortener</div>
                    <div class=" m-0  p-0  text-xl  text-white  antialiased  text-center">Made using Node.js Express
                        MongoDB and Tailwind</div>
                    <div class=" mt-3  flex  flex-row  flex-wrap">
                        <input type="text" class=" text-gray-600  w-2/3  p-2  rounded-l-lg" name="fullUrl"
                            placeholder="Paste the URL" />
                        <button class=" p-2  w-1/3  bg-indigo-400  rounded-r-lg  text-white hover: bg-indigo-300"
                            type="submit">Submit</button>
                    </div>
                </div>
            </div>

        </div>
    </form>

    <!-- component -->
    <main class="flex items-center justify-center">
        <div class="container">
            <table class="w-full flex flex-row flex-no-wrap sm:bg-white rounded-lg overflow-hidden sm:shadow-lg my-5">
                <thead class="text-white">
                    <tr
                        class="bg-teal-400 flex flex-col flex-no wrap sm:table-row rounded-l-lg sm:rounded-none mb-2 sm:mb-0">
                        <th class="p-3 text-left">Full URL</th>
                        <th class="p-3 text-left">Short URL</th>
                        <th class="p-3 text-left" width="110px">Clicks</th>
                    </tr>

                </thead>
                <tbody class="flex-1 sm:flex-none">
                    <!-- ********Looping through the every single urls_short (home_controller.js line 7) ************ -->
                    <% Urls_short.forEach(Urls=> { %>

                        <tr class="flex flex-col flex-no wrap sm:table-row mb-2 sm:mb-0">
                            <td class="border-grey-light border hover:bg-gray-100 p-3"><a href=" <%= Urls.full  %>    ">
                                    <%= Urls.full %>
                                </a></td>
                            <td class="border-grey-light border hover:bg-gray-100 p-3 truncate"><a target="_blank"
                                    href=" <%= Urls.short  %>  ">
                                    <%= Urls.short %>
                                </a></td>
                            <td
                                class="border-grey-light border hover:bg-gray-100 p-3 text-red-400 hover:text-red-600 hover:font-medium cursor-pointer">
                                <%= Urls.clicks %>
                            </td>
                        </tr>

                        <% }) %>

                </tbody>
            </table>
        </div>

    </main>

    <footer class="name-center">



        <p class="inline-flex text-blue-500 px-2 pt-6 text-blue-500">
            Built by Tabish Hussain
        </p>

    </footer>

</body>

</html>